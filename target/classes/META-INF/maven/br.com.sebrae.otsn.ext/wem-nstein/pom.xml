<project xmlns="http://maven.apache.org/POM/4.0.0" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  	<modelVersion>4.0.0</modelVersion>
  	<groupId>br.com.sebrae.otsn.ext</groupId>
  	<artifactId>wem-nstein</artifactId>
  	<version>1.0.0</version>
  	<name>wem-nstein</name>
  	  	
  	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    	<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  	</properties>
  	
  	<dependencies>
		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.0.2</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/activation.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-httpclient</artifactId>
			<version>3.1</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/commons-httpclient.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.2</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/commons-io-1.2.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>org</groupId>
			<artifactId>json</artifactId>
			<version>1.0.0</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/json.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>org.apache</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/log4j.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>com.ice</groupId>
			<artifactId>tar</artifactId>
			<version>2.3</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/tar.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>com.vignette</groupId>
			<artifactId>vcm-api</artifactId>
			<version>8.5</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/vcm-api.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>com.vignette</groupId>
			<artifactId>vcm-ui</artifactId>
			<version>8.5</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/vcm-ui.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>com.vignette</groupId>
			<artifactId>vgn-appsvcs-cma</artifactId>
			<version>8.5</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/vgn-appsvcs-cma.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>com.vignette</groupId>
			<artifactId>vgn-shared-logging</artifactId>
			<version>8.5</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/vgn-shared-logging.jar</systemPath>
		</dependency>		
		<dependency>
			<groupId>com.vignette</groupId>
			<artifactId>vui</artifactId>
			<version>8.5</version>
		    <scope>system</scope>
		    <systemPath>${basedir}/lib/vui.jar</systemPath>
		</dependency>
	</dependencies>
	
  	<build>
    	<finalName>wem-nstein</finalName>
    	<plugins>
			<plugin>
            	<groupId>org.apache.maven.plugins</groupId>
            	<artifactId>maven-compiler-plugin</artifactId>
            	<version>2.3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
		    		<encoding>UTF-8</encoding>
		    		<outputEncoding>UTF-8</outputEncoding>
           		</configuration>
       		</plugin>
       		<plugin>
		    	<groupId>org.apache.maven.plugins</groupId>
		    	<artifactId>maven-resources-plugin</artifactId>
		    	<version>2.7</version>
		    	<configuration>
			    	<encoding>UTF-8</encoding>
		    		<outputEncoding>UTF-8</outputEncoding>
		    	</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
			            	<addClasspath>true</addClasspath>
							<mainClass>com.opentext.demo.otsn.apps.contentIndex.ContentIndexDriver</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
       	</plugins>
	</build>
</project>